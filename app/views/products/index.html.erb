<div class="container">
  <div class="row">
    <h2 class="right-line">Products</h2>
    <div class="col-md-12">
      <h3>Strategies</h3>
      <table class="table">
        <tr class="success">
          <th class="text-center lead lead-lg">No.</th>
          <th class="text-center lead lead-lg">Type</th>
          <th class="text-center lead lead-lg">Title</th>
          <th class="text-center lead lead-lg">Resume</th>
          <th class="text-center lead lead-lg">Price</th>
          <th class="text-center lead lead-lg">Options</th>
        </tr>
        <% @products.where(product_type: 0).each_with_index do |product,index| %>
          <tr class="text-center">
            <td class="lead lead-sm vert-align text-center"><%= index+1 %></td>
            <td class="lead lead-sm vert-align text-center"><%= product.product_type.humanize %></td>
            <td class="lead lead-sm vert-align text-center"><%= product.title %></td>
            <td class="lead lead-sm vert-align text-center"><%= product.resume %></td>
            <td class="lead lead-sm vert-align text-center"><%= product.price %></td>
            <td class="lead lead-sm vert-align text-center">
              <%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_product_path(product), class: "btn btn-ar btn-warning" %>
              <%= link_to product_path(product.id), method: :delete, data: { confirm: '¿Are you sure?' }, class: "btn btn btn-ar btn-danger" do %><i class="fa fa-trash"></i><% end %>
            </td>
          </tr>
        <% end %>
