<header class="main-header">
  <div class="container">
    <h1 class="page-title"><%= @product.product_type.humanize %></h1>

    <ol class="breadcrumb pull-right">
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Bussiness & Products", pages_trading_apps_path %></li>
      <li class="active">Products</li>
    </ol>
  </div>
</header>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-9">
        <p class="slogan text-center" style="margin-bottom: 20px;"><span><%= @product.title %></span></p>
        <p class="slogan text-center margin-bottom"><%= @product.subtitle %></p>
        <div class="col-md-6">
          <img src="<%= @product_images[0].image.url(:product_show) %>" alt="" style="margin-bottom: 20px;" class="img-responsive">
        </div>
        <div class="col-md-6">
          <img src="<%= @product_images[1].image.url(:product_show) %>" alt="" style="margin-bottom: 20px;" class="img-responsive">
        </div>
      </div>
      <div class="col-md-3">
        <div class="e-price">$ <span><%= @product.price %></span>.00 <span class="price-time">Six Months</span></div>
        <div class="e-price">$ <span><%= @product.price_one_year %></span>.00 <span class="price-time">One Year</span></div>
        <div class="e-price">$ <span><%= @product.price_open_source %></span>.00 <span class="price-time">Open Source</span></div>
        <%= link_to '<i class="fa fa-shopping-cart"></i> Buy Now'.html_safe, new_order_path(product_id: @product.id), class: "btn btn-ar btn-block btn-success" %>
        <%= link_to "More info abou this product", @product.more_info_link, class: "btn btn-ar btn-block btn-primary", target: "blank" %>
        <h3 class="right-line">Related Products</h3>
        <div class="ec-box">
          <div class="ec-box-header"><%= link_to @random_item.title, product_path(@random_item) %></div>
          <%= link_to "<img src='#{asset_path('demo/e_img03.jpg')}' alt=''>".html_safe, product_path(@random_item) %>
          <div class="ec-box-footer">
            <span class="label label-primary">Start at <%= number_to_currency(@random_item.price) %></span>
            <%= link_to '<i class="fa fa-shopping-cart"></i> Buy Now'.html_safe, new_order_path(product_id: @product.id), class: "btn btn-ar btn-success btn-sm pull-right" %>
          </div>
        </div>
      </div>
    </div>
  </div> <!-- row -->

  <section class="margin-bottom">
    <!-- <p class="lead lead-lg text-center primary-color margin-bottom">Knows the <strong>Artificial Reason</strong> and surprise yourself</p> -->
    <div class="row">
      <div class="col-md-6">
        <h2 class="no-margin-top">Product Specifications</h2>
        <ol class="service-list list-unstyled">
          <% @specifications.each do |spec| %>
            <li class="wow fadeInUp"><%= spec %></li>
          <% end %>
        </ol>
      </div>
      <div class="col-md-6">
        <img src="<%= @product_images[2].image.url(:big_product_show) %>" alt="" class="img-responsive">
      </div>
    </div>
  </section>
</div> <!-- container -->

<section class="section-lines">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <div class="home-devices">
          <h3><%= @product.section_title %></h3>
          <p><%= @product.section_paragraph_1 %></p>
          <p><%= @product.section_paragraph_2 %></p>
          <ul class="icon-devices">
            <li class="active"><a href="#desktop" data-toggle="tab"><i class="fa fa-line-chart"></i></a></li>
            <li><a href="#mobile" data-toggle="tab"><i class="fa fa-pie-chart"></i></a></li>
            <li><a href="#laptop" data-toggle="tab"><i class="fa fa-bar-chart"></i></a></li>
            <li><a href="#tablet" data-toggle="tab"><i class="fa fa-area-chart"></i></a></li>
          </ul>

        </div>
      </div>
      <div class="col-md-8">
        <div class="tab-content">
          <div class="tab-pane active" id="desktop">
            <img src="<%= @section_images[0].image.url(:section_size) %>" alt="" class="img-responsive">
          </div>
          <div class="tab-pane" id="laptop">
            <img src="<%= @section_images[1].image.url(:section_size) %>" alt="" class="img-responsive">
          </div>
          <div class="tab-pane" id="tablet">
            <img src="<%= @section_images[2].image.url(:section_size) %>" alt="" class="img-responsive">
          </div>
          <div class="tab-pane" id="mobile">
            <img src="<%= @section_images[3].image.url(:section_size) %>" alt="" class="img-responsive">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

