<div class="container center">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
      <div class="transparent-div no-padding">
        <ul class="nav nav-tabs nav-tabs-transparent">
          <li class="active"><a href="#home" data-toggle="tab">Iniciar sesión</a></li>
        </ul>
        <!-- Tab panes -->
        <div class="tab-content">
          <div class="tab-pane active">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field form-group input-group login-input">
              <span class="input-group-addon"><i class="fa fa-user"></i></span>
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Correo Electrónico" %>
            </div>

            <div class="field form-group input-group login-input">
              <span class="input-group-addon"><i class="fa fa-lock"></i></span>
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Contraseña" %>
            </div>

            <% if devise_mapping.rememberable? -%>
            <div class="field form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me ,'Recordarme' %>
            </div>
            <% end -%>

            <div class="actions form-group">
              <%= f.submit "Iniciar sesión", class: "btn btn-ar btn-primary pull-right btn-lg" %>
            </div>
            <% end %>
            <%#= render "devise/shared/links" %>
            <%= link_to "¿Olvidaste tu contraseña?", new_password_path(:user) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<br>
<style>
  body{background-image: url("http://i592.photobucket.com/albums/tt5/Mardini03/back.png") !important; }
  @media (min-height:400px) {
    .center{
      position: absolute;
      top:50%;
      width: 100%;
      transform:translate(0,-50%);
      -ms-transform: translate(0,-50%); /* IE 9 */
      -webkit-transform: translate(0,-50%); /* Chrome, Safari, Opera */
      display: block;
    }
  }
  @media (max-height:399px) {
    .center { margin-top: 9.5% }
  }
</style>