<div class="container">
  <div class="row">
    <h2 class="right-line">Steps</h2>
    <div class="col-md-12">
      <h3>How To Buy Steps</h3>
      <table class="table">
        <tr class="success">
          <th class="text-center lead lead-lg">No.</th>
          <th class="text-center lead lead-lg">Title</th>
          <th class="text-center lead lead-lg">Content</th>
          <th class="text-center lead lead-lg">Options</th>
        </tr>
        <% @steps.where(step_type: 0).each_with_index do |step,index| %>
          <tr class="text-center">
            <td class="lead lead-sm vert-align text-center"><%= index+1 %></td>

            <td class="lead lead-sm vert-align text-center"><%= step.title %></td>
            <td class="lead lead-sm vert-align text-center"><%= step.content %></td>
            <td class="lead lead-sm vert-align text-center">
              <%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_step_path(step), class: "btn btn-ar btn-warning" %>
              <%= link_to step_path(step.id), method: :delete, data: { confirm: '¿Are you sure?' }, class: "btn btn btn-ar btn-danger" do %><i class="fa fa-trash"></i><% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>

