<div class="col-md-6 col-md-offset-3">
  <div class="product_image text-center">
    <img src="<%= @product_images[0].image.url(:thumb) %>" alt="" style="margin: auto;"class="img-responsive">
    <h2><%= @product.title %></h2>
  </div>
  <div class="field form-group">
    <%= order.label :trading_software, "Trading Software:", class: "lead lead-lg" %>
    <%= order.collection_select :trading_software, Order.trading_softwares.keys, :to_s, :titlecase, { include_blank: "Select One Trading Software" },{ required: true, class: "form-control" } %>
  </div>
  <div class="field form-group">
    <%= order.label :customer_id, "Customer ID:", class: "lead lead-lg" %>
    <%= order.text_field :customer_id, required: true, :rows => 5, class: "form-control", id: "new_user_email" %>
  </div>

  <div class="field form-group">
    <%= order.check_box :accepts_disclaimer, required: true %>
    <%= order.label :accepts_disclaimer, "I have read and accept all conditions", class: "lead lead-lg" %>
  </div>

  <div class="actions form-group text-center">
    <%= order.submit "Go To Buy Product", class: "btn btn-ar btn-lg btn-success" %>
  </div>
</div>