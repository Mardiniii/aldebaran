<header class="main-header">
  <div class="container">
    <h1 class="page-title">FAQ</h1>

    <ol class="breadcrumb pull-right">
      <li><%= link_to "Home", root_path %></li>
      <li class="active">FAQ & Support</li>

    </ol>
  </div>
</header>

<div class="container">
  <div class="row">
    <section>
     <div class="col-xs-12">
      <p><%= @content.faq_paragraph %></p>
    </div>
  </section>
  <div class="col-md-8">
    <h2 class="section-title">Lista de Preguntas</h2>
    <div class="panel-group" id="accordion1">
      <% @faq_items.each_with_index do |faq_item, index| %>
        <div class="panel panel-primary">
          <div class="panel-heading panel-plus-link">
            <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion1" href='<%= "#collapse#{faq_item.id}" %>'>
              <%= "#{index+1}. #{faq_item.question}" %>
            </a>
          </div>
          <div id="<%= "collapse#{faq_item.id}" %>" class="panel-collapse collapse">
            <div class="panel-body">
              <%= faq_item.answer %>
            </div>
          </div>
        </div>
      <% end %>
    </div> <!-- panel-group -->
  </div> <!-- col-md-8 -->
  <div class="col-md-4">
    <h2 class="section-title">¿Mas Preguntas?</h2>

    <form action="//formspree.io/support@aldebarantech.com " method="POST">
      <div class="form-group">
        <label for="InputName">Name</label>
        <input type="text" name="name" class="form-control" id="InputName" placeholder="Quantscience">
      </div>
      <div class="form-group">
        <label for="InputEmail">Email</label>
        <input type="email" name="_replyto" class="form-control" id="InputEmail" placeholder="quantsciencesas@gmail.com">
      </div>
      <div class="form-group">
        <label for="InputText">Pregunta</label>
        <input type="text" id="InputText" name="question" class="form-control" rows="5"></input>
      </div>
      <input type="hidden" name="_next" value="//www.quantsciencetech.com/" />
      <input type="hidden" name="_subject" value="Question From FAQ Section - Aldebaran Tech" />
      <button value="send" type="submit" class="contact-submit btn btn-ar btn-success btn-lg btn-block">Enviar Pregunta</button>
    </form>

    <div class="contact-info">
      <h3>Contacto</h3>
      <address>
        <strong>Quantscience</strong><br>
        quantsciencesas@gmail.com<br>
      </address>

      <!-- Business Hours -->
      <h3>Horario de Negociación(New York Time)</h3>
      <ul class="list-unstyled">
        <li><strong>Lunes-Viernes:</strong> 8a.m. a 4p.m.</li>
      </ul>
    </div>
  </div>
</div> <!-- row -->
</div> <!-- container -->

<script>
  $(document).ready(function () {
    $('.contact-submit').click(function() {
      alert("Gracias por tu mensaje, estaremos en contacto contigo lo mas pronto");
    });
  });
</script>