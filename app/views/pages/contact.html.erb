
<header class="main-header">
  <div class="container">
    <h1 class="page-title">Contact Us</h1>

    <ol class="breadcrumb pull-right">
      <li><%= link_to "Home", root_path %></li>
      <li class="active">Contact Us</li>
    </ol>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="section-title no-margin-top">Send Message</h2>
    </div>
    <div class="col-md-8">
      <section>
        <p class="text-justify"><%= @content.contact_us_paragraph %></p>

        <form role="form">
          <div class="form-group">
            <label for="InputName">Name</label>
            <input type="email" class="form-control" id="InputName">
          </div>
          <div class="form-group">
            <label for="InputEmail1">Email address</label>
            <input type="email" class="form-control" id="InputEmail1">
          </div>
          <div class="form-group">
            <label for="InputMessage">Mesagge</label>
            <textarea class="form-control" id="InputMessage" rows="8"></textarea>
          </div>
          <button type="submit" class="btn btn-ar btn-primary">Submit</button>
          <div class="clearfix"></div>
        </form>
      </section>
    </div>

    <div class="col-md-4">
      <section>
        <div class="panel panel-primary">
          <div class="panel-heading"><i class="fa fa-envelope-o"></i> Additional Information</div>
          <div class="panel-body">
            <h4 class="section-title no-margin-top">Contacts</h4>
            <address>
              <strong>Aldebaran Tech</strong><br>
              support@aldebarantech.com<br>
            </address>

            <!-- Business Hours -->
            <h4 class="section-title no-margin-top">Business Hours (New York Time)</h4>
            <ul class="list-unstyled">
              <li><strong>Monday-Friday:</strong> 9am to 4pm</li>
              <li><strong>Saturday-Sunday:</strong> Closed</li>
            </ul>
          </div>
        </div>
      </section>
    </div>
  </div>

  <hr class="dotted">
  </div> <!-- container -->