                    <li class="animated bounceInLeft animation-delay-15"><%= link_to "<i class='fa fa-line-chart'></i>#{@content.carousel_link_3_text}".html_safe, @content.carousel_link_3, class: "white-text" %></li>
                  </ul>
                  <p class="animated fadeInDown animation-delay-8 text-center"><%= link_to "Buy Products", pages_my_store_path, class: "btn btn-ar btn-primary btn-lg" %></p>
                </div>
              </div>
            </div>
            <div class="col-md-6 col-sm-4 hidden-xs carousel-img-wrap">
              <div class="carousel-img">
                <img src="<%= @carousel_images[1].image.url %>" class="img-responsive animated bounceInUp animation-delay-3" alt="Image">
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="item">
        <div class="container">
          <div class="row">
            <div class="col-md-6 col-sm-8">
              <div class="carousel-caption">
                <div class="carousel-text">
                  <h1 class="animated fadeInDownBig animation-delay-7 carousel-title"><%= @content.slide_3_title %></h1>
