<header class="main-header">
  <div class="container">
    <h1 class="page-title">Entrenamientos & Educación</h1>

    <ol class="breadcrumb pull-right">
      <li><%= link_to "Home", root_path %></li>
      <li class="active">Entrenamientos & Educación</li>
    </ol>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <section class="animated fadeIn animation-delay-10">
      <h3 class="section-title">Trading Algorítmico</h3>
        <div class="panel-group" id="accordion">
          <% @steps_1.each do |step| %>
            <div class="panel panel-default">
              <div class="panel-heading panel-heading-link">
                <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= step.id %>">
                  <%= step.title %>
                </a>
              </div>
              <div id="collapse<%= step.id %>" class="panel-collapse collapse">
                <div class="panel-body">
                  <%= step.content %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </section>

      <section class="animated fadeIn animation-delay-10">
      <h3 class="section-title">Trading Discrecional</h3>
        <div class="panel-group" id="accordion2">
          <% @steps_2.each do |step| %>
            <div class="panel panel-default">
              <div class="panel-heading panel-heading-link">
                <a data-toggle="collapse" data-parent="#accordion2" href="#collapse<%= step.id %>-2">
                  <%= step.title %>
                </a>
              </div>
              <div id="collapse<%= step.id %>-2" class="panel-collapse collapse">
                <div class="panel-body">
                  <%= step.content %>
                </div>
              </div>
            </div>
          <% end %>
          <div class="panel panel-default">
            <div class="panel-heading panel-heading-link">
              <a data-toggle="collapse" data-parent="#accordion2" href="#collapse11000-2">
                For more detailed information
              </a>
            </div>
            <div id="collapse11000-2" class="panel-collapse collapse">
              <div class="panel-body">
                Please visit this <a href="https://medium.com/@aldebarantech/how-to-import-a-eld-file-7ee98fb18bf4#.8qq8fe9dj" target="_blank">link</a>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section class="animated fadeIn animation-delay-10">
        <h3 class="section-title">Brokers</h3>
        <div class="panel-group" id="accordion3">
          <div class="panel panel-default">
            <div class="panel-heading panel-heading-link">
              <a data-toggle="collapse" data-parent="#accordion3" href="#collapse9999-3">
                Multicharts
              </a>
            </div>
            <div id="collapse9999-3" class="panel-collapse collapse">
              <div class="panel-body">
                Visit this <a href="http://www.multicharts.com/multicharts/purchase/" target="_blank">link</a> to purchase the multicharts trading software. This trading software works for these <a href="http://www.multicharts.com/brokers/" target="_blank">supported brokers.</a>
              </div>
            </div>
          </div>
          <div class="panel panel-default">
            <div class="panel-heading panel-heading-link">
              <a data-toggle="collapse" data-parent="#accordion3" href="#collapse10000-3">
                Tradestation
              </a>
            </div>
            <div id="collapse10000-3" class="panel-collapse collapse">
              <div class="panel-body">
                Visit this <a href="https://getstarted.tradestation.com/newaccount/getstarted.aspx?offer=3045ADJI" target="_blank">link</a> to open an account with Tradestation.
              </div>
            </div>
          </div>
          <% @steps_3.each do |step| %>
            <div class="panel panel-default">
              <div class="panel-heading panel-heading-link">
                <a data-toggle="collapse" data-parent="#accordion3" href="#collapse<%= step.id %>-3">
                  <%= step.title %>
                </a>
              </div>
              <div id="collapse<%= step.id %>-3" class="panel-collapse collapse">
                <div class="panel-body">
                  <%= step.content %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </section>
    </div>
  </div>
</div> <!-- container -->